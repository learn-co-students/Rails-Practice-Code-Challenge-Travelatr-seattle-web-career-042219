
<%if @blogger.errors.any? %>
  <div id="error-explanation">
     <p><%= pluralize(@blogger.errors.full_messages.size, 'error') %>: </p>
      <ul class = "field_with_errors">
       <% @blogger.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>    
     </ul>
   </div>
 <% end %>
<%= form_for(@blogger) do |f| %>
     <div class="field">
        <%= f.label :name %><br>
        <%= f.text_field :name %>
    </div>
    <div class="field">
        <%= f.label :age %><br>
        <%= f.number_field :age %>
    </div>
    <div class="field">
        <%= f.label :bio %><br>
        <%= f.text_area :bio %>
    </div>
    <div class="actions">
        <%= f.submit %>
    </div>
<% end %>