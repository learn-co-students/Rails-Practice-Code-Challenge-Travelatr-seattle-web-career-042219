<%= form_for(@blogger) do |f| %>
     <div class="field">
        <%= f.label :name %><br>
        <%= f.text_field :name %>
    </div>
    <div class="field">
        <%= f.label :age %><br>
        <%= f.number_field :age %>
    </div>
    <div class="field">
        <%= f.label :bio %><br>
        <%= f.text_area :bio %>
    </div>
    <div class="actions">
        <%= f.submit %>
    </div>
    <br>
<% end %>