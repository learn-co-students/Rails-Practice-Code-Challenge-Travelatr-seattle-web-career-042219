
<%if @post.errors.any? %>
  <div id="error-explanation">
     <p><%= pluralize(@post.errors.full_messages.size, 'error') %>: </p>
      <ul class = "field_with_errors">
       <% @post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>    
     </ul>
   </div>
 <% end %>

<%= form_for(@post) do |f| %>
    <div class="field">
        <%= f.label :title %><br>
        <%= f.text_field :title %>
    </div>
    <div class="field">
        <%= f.label :content %><br>
        <%= f.text_area :content %>
    </div>
    <div class="field">
        <%= f.label :likes %><br>
        <%= f.number_field :likes %>
    </div>
       <div class="field">
        <%= f.label :blogger, "Blogger" %><br>
        <%= f.collection_select :blogger_id, Blogger.all, :id, :name, prompt: true %>
    </div>
       <div class="field">
        <%= f.label :destination, "Destination" %><br>
        <%= f.collection_select :destination_id, Destination.all, :id, :name, prompt: true %>
        <%#= f.collection_select :destination_id, Destination.all, :id, :full_name, prompt: true %>
    </div>
    <%= f.submit %>
<% end %>