<%= form_for(@post) do |f| %>
    <div class="field">
        <%= f.label :title %><br>
        <%= f.text_field :title %><br>
    </div>
    <div class="field">
        <%= f.label :content %><br>
        <%= f.text_area :content %><br>
    </div>
    <div class="field">
        <%= f.label :blogger, "Blogger" %><br>
        <%= f.collection_select :blogger_id, Blogger.all, :id, :name, prompt: true %><br>
    </div>
       <div class="field">
        <%= f.label :destination, "Destination" %><br>
        <%= f.collection_select :destination_id, Destination.all, :id, :full_name, prompt: true %><br>
    </div>
        <div class="field">
        <%= f.label :likes %><br>
        <%= f.number_field :likes %><br>
    </div>
    <br>
    <%= f.submit %>
<% end %>